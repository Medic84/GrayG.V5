            </Normal>
            <Pressed>
                <Image x="110+#music_pre_show*not(#unlocker.state)+#music_pre_miss*min(#unlocker.state,1)" y="935.5" align="center" alpha="#music_btn_show_alpha*not(#unlocker.state)+#music_btn_miss_alpha*min(#unlocker.state,1)" alignV="center" src="music_pre_n.png"/>
            </Pressed>
        </Button>
