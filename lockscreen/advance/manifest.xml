            </Normal>
            <Pressed>
                <Image x="361.5" y="736.5+#music_play_show*not(#unlocker.state)+#music_play_miss*min(#unlocker.state,1)" alpha="#music_btn_show_alpha*not(#unlocker.state)+#music_btn_miss_alpha*min(#unlocker.state,1)" align="center" alignV="center" src="music_play_n.png"/>
            </Pressed>
        </Button>
        <!-- 暂停 -->
        <Button name="music_pause" x="319" y="679+#music_play_show*not(#unlocker.state)+#music_play_miss*min(#unlocker.state,1)" w="81" h="81">
            <Normal>
                <Image x="361" y="738+#music_play_show*not(#unlocker.state)+#music_play_miss*min(#unlocker.state,1)" alpha="#music_btn_show_alpha*not(#unlocker.state)+#music_btn_miss_alpha*min(#unlocker.state,1)" align="center" alignV="center" src="music_pause_n.png"/>
            </Normal>
            <Pressed>
                <Image x="361" y="738+#music_play_show*not(#unlocker.state)+#music_play_miss*min(#unlocker.state,1)" alpha="#music_btn_show_alpha*not(#unlocker.state)+#music_btn_miss_alpha*min(#unlocker.state,1)" align="center" alignV="center" src="music_pause_n.png"/>
            </Pressed>
        </Button>
    </MusicControl>
		
	<Button x="270" y="#screen_height-1280+829" w="180" h="180">
	<Triggers>
		<Trigger action="double" target="music_control" property="visibility" value="toggle">
			<Command target="music_ring_show.animation" value="play"/>
			<Command target="music_show.animation" value="play"/>
			<Command target="music_pre_show.animation" value="play"/>
			<Command target="music_next_show.animation" value="play"/>
			<Command target="music_play_show.animation" value="play"/>
			<Command target="music_btn_show_alpha.animation" value="play"/>
			<Command target="music_miss.animation" value="play" condition="not(#music_control.visibility)"/>
		</Trigger>
	</Triggers>
	</Button>
	<Var name="current_unlock_state" expression="#unlocker.state" threshold="1">
		<Trigger> 
			<Command target="music_ring_miss.animation" value="play" condition="eq(#current_unlock_state.old_value,0)*eq(#current_unlock_state,1)"/>
			<Command target="music_play_miss.animation" value="play" condition="eq(#current_unlock_state.old_value,0)*eq(#current_unlock_state,1)"/>
			<Command target="music_pre_miss.animation" value="play" condition="eq(#current_unlock_state.old_value,0)*eq(#current_unlock_state,1)"/>
			<Command target="music_next_miss.animation" value="play" condition="eq(#current_unlock_state.old_value,0)*eq(#current_unlock_state,1)"/>
			<Command target="music_btn_miss_alpha.animation" value="play" condition="eq(#current_unlock_state.old_value,0)*eq(#current_unlock_state,1)"/>
			<Command target="info_show.animation" value="play" condition="eq(#current_unlock_state.old_value,0)*eq(#current_unlock_state,1)"/>
			
			<Command target="music_ring_show.animation" value="play" condition="eq(#current_unlock_state.old_value,1)*eq(#current_unlock_state,0)"/>
			<Command target="music_play_show.animation" value="play" condition="eq(#current_unlock_state.old_value,1)*eq(#current_unlock_state,0)"/>
			<Command target="music_pre_show.animation" value="play" condition="eq(#current_unlock_state.old_value,1)*eq(#current_unlock_state,0)"/>
			<Command target="music_next_show.animation" value="play" condition="eq(#current_unlock_state.old_value,1)*eq(#current_unlock_state,0)"/>
			<Command target="music_btn_show_alpha.animation" value="play" condition="eq(#current_unlock_state.old_value,1)*eq(#current_unlock_state,0)"/>
			<Command target="charge.animation" value="play" condition="eq(#current_unlock_state.old_value,1)*eq(#current_unlock_state,0)"/>
			<VariableCommand name="info_miss_init" expression="#info_show" const="true"/>
			<Command target="info_miss.animation" value="play" condition="eq(#current_unlock_state.old_value,1)*eq(#current_unlock_state,0)"/>
		</Trigger>
	</Var>
	
	
	
	
