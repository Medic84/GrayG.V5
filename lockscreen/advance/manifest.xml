<?xml version="1.0" encoding="utf-8"?>
<Lockscreen version="1" frameRate="60" frameRateCharging="60" frameRateBatteryLow="20"  screenWidth="720">
    <Wallpaper/>
	<Image y="#screen_height-1280+446" w="720" src="wallpaper_overlay.9.png" visibility="not(eq(1,#battery_state)+eq(3,#battery_state))"/>
	<Image y="#screen_height-1280+446" w="720" src="wallpaper_overlay_charging.9.png" visibility="eq(1,#battery_state)+eq(3,#battery_state)"/>
	<Image y="#screen_height-1280"  w="720" h="1280" alpha="#music_miss" src="music_album_cover.9.png"/>
	<Var name="gap" expression="6"/>	
	<Var name="info_x" expression="0"/>	
	<Var name="icon_phone_x" expression="0"/>	
	<Var name="calls_x" expression="#icon_phone_x+#icon_phone.bmp_width+#gap"/>	
	<Var name="info_divide_x" expression="#calls_x+#calls.text_width+#gap*4"/>
	<Var name="icon_sms_x" expression="(#info_divide_x+#info_divide.bmp_width+#gap*4)*gt(#call_missed_count,0)"/>
	<Var name="sms_x" expression="#icon_sms_x+#icon_sms.bmp_width+#gap"/>
	<Var name="info_width" expression="(#icon_phone.bmp_width+#gap+#calls.text_width)*gt(#call_missed_count,0)+(#gap*4+#info_divide.bmp_width+#gap*4)*#info_double+(#icon_sms.bmp_width+#gap+#sms.text_width)*gt(#sms_unread_count,0)"/>
			
	<Var name="info_exist" expression="gt(#call_missed_count+#sms_unread_count,0)"/>
	<Var name="info_double" expression="gt(#call_missed_count*#sms_unread_count,0)"/>
	<Var name="unlock_x" expression="359" const="true" />
    <Var name="unlock_y" expression="#screen_height-1280+1003.5" const="true" />
    <Var name="inner_r" expression="202.5" const="true" />
    <Var name="offset_x" expression="ifelse(le(#unlocker.move_dist,#inner_r), #unlocker.move_x, #unlocker.move_x*#inner_r/#unlocker.move_dist)"/>
    <Var name="offset_y" expression="ifelse(le(#unlocker.move_dist,#inner_r), #unlocker.move_y, #unlocker.move_y*#inner_r/#unlocker.move_dist)"/>
		
	<Var name="music_miss">
	   <VariableAnimation>						
		  <AniFrame value="200" time="0"/>																						
		  <AniFrame value="0" time="500"/>																						
		  <AniFrame value="0" time="100000000000"/>																						
		</VariableAnimation>
	</Var>
	<Var name="music_show">
	   <VariableAnimation>						
		  <AniFrame value="255" time="500"/>																						
		  <AniFrame value="255" time="100000000000"/>																						
		</VariableAnimation>
	</Var>
	<Var name="music_play_show">
	   <VariableAnimation>						
			<AniFrame value="196" time="0"/>
			<AniFrame value="0" time="500"/>
			<AniFrame value="0" time="1000000000000000"/>																					
		</VariableAnimation>
	</Var>
	<Var name="music_play_miss">
	   <VariableAnimation>						
			<AniFrame value="0" time="0"/>
			<AniFrame value="100" time="500"/>
			<AniFrame value="100" time="1000000000000000"/>																					
		</VariableAnimation>
	</Var>
	<Var name="music_pre_show">
	   <VariableAnimation>						
			<AniFrame value="250" time="0"/>
			<AniFrame value="0" time="500"/>
			<AniFrame value="0" time="1000000000000000"/>																					
		</VariableAnimation>
	</Var>
	<Var name="music_pre_miss">
	   <VariableAnimation>						
			<AniFrame value="0" time="0"/>
			<AniFrame value="180" time="500"/>
			<AniFrame value="180" time="1000000000000000"/>																					
		</VariableAnimation>
	</Var>
	<Var name="music_next_show">
	   <VariableAnimation>						
			<AniFrame value="-250" time="0"/>
			<AniFrame value="0" time="500"/>
			<AniFrame value="0" time="1000000000000000"/>																					
		</VariableAnimation>
	</Var>
	<Var name="music_next_miss">
	   <VariableAnimation>						
			<AniFrame value="0" time="0"/>
			<AniFrame value="-180" time="500"/>
			<AniFrame value="-180" time="1000000000000000"/>																					
		</VariableAnimation>
	</Var>
	<Var name="music_btn_show_alpha">
	   <VariableAnimation>						
			<AniFrame value="0"   time="0"/>
			<AniFrame value="64"  time="350"/>
			<AniFrame value="128" time="525"/>
			<AniFrame value="255" time="1000"/>
			<AniFrame value="255" time="1000000000000000"/>																					
		</VariableAnimation>
	</Var>
	<Var name="music_btn_miss_alpha">
	   <VariableAnimation>						
			<AniFrame value="32"   time="0"/>
			<AniFrame value="0" time="500"/>
			<AniFrame value="0" time="1000000000000000"/>																					
		</VariableAnimation>
	</Var>
	<Var name="info_miss">
	   <VariableAnimation>						
		  <AniFrame value="#info_miss_init" time="0"/>																						
		  <AniFrame value="0" time="300"/>																						
		  <AniFrame value="0" time="100000000000"/>																						
		</VariableAnimation>
	</Var>
	<Var name="info_show">
	   <VariableAnimation>						
		  <AniFrame value="0" time="0"/>																						
		  <AniFrame value="0" time="200"/>																						
		  <AniFrame value="255" time="500"/>																						
		  <AniFrame value="255" time="100000000000"/>																						
		</VariableAnimation>
	</Var>

	<MusicControl name="music_control" x="0" y="#screen_height-1280" w="#screen_width" h="#screen_height" autoShow="true" visibility="false" defAlbumCover="default_album_cover.png"  alpha="#music_show">
